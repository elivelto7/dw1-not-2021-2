programa
{
	
	funcao inicio()
	{
		// variável medidas "quilômetros" e "milhas" do tipo real
		real quilometros, milhas, multiplicacao
		// obter a medida em quilômetros
		escreva("Informe a distancia em quilometros: ")
		leia(quilometros)
		// obter a conversão de quilômetros para milhas
		multiplicacao = quilometros * 0.6214
		escreva("Sua conversão em milhas e de ", multiplicacao, "milhas")
	}
}
